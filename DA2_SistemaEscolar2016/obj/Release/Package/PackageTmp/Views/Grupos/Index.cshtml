@model IEnumerable<DA2_SistemaEscolar2016.Models.Grupo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@Html.Partial("../BuscadorFormulario")
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombreGrupo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.carrera)
        </th>
        <th>
            Cantidad de Alumnos
        </th>
        <th>
            
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreGrupo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.carrera)
        </td>
        <td>
            @item.alumnos.Count()
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.grupoID }) |
            @Html.ActionLink("Detalles", "detalles", new { id=item.grupoID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.grupoID })
        </td>
    </tr>
}

</table>
