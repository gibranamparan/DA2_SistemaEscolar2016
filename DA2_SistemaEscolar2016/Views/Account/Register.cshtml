@model DA2_SistemaEscolar2016.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <fieldset id="fsUsuario">
        <legend>Datos de Usuario</legend>
        <div class="form-group">
            <label for="rol" class="col-md-2 control-label">Rol</label>
            <div class="col-md-10">
                <select id="rol" name="rol" class="form-control">
                    <option value="Profesor">Profesor</option>
                    <option value="Administrador">Administrador</option>
                    <option value="Capturista">Capturista</option>
                    <option value="Visitante">Visitante</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    </fieldset>
    <fieldset id="fsProfesor">
        <legend>Datos del profesor</legend>
        <div class="form-group">
            @Html.LabelFor(m => m.nombre, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.nombre, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.apellidoP, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.apellidoP, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.apellidoM, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.apellidoM, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.especialidad, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.especialidad, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.grado, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.grado, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $("#rol").change(function () {
            //Detectar que selecciono el usuario
            var valorSeleccionado = $(this).find(':selected').text()
            //Si fue la opcion "profesor" aparecer el panel
            if (valorSeleccionado == "Profesor") {
                $("#fsProfesor").fadeIn();
            }
            //si no
            else {
                $("#fsProfesor").fadeOut();
            }            
        })
    </script>
}
