@model DA2_SistemaEscolar2016.Models.Grupo
@using DA2_SistemaEscolar2016.Models

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Alumno nuevoAlumno = new Alumno();
    //Asginarle a un posible nuevo alumno
    //el grupo que se esta visualizando
    nuevoAlumno.grupoID = Model.grupoID;
}

<h2>Detalles</h2>

<div>
    <h4>Grupo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nombreGrupo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombreGrupo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.carrera)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.carrera)
        </dd>
    </dl>
</div>
@Html.Partial("../Alumno/Partial_Crear", nuevoAlumno)
<table class="table table-striped table-hover">
    <tr>
        <th>Nombre Completo</th>
        <th>Fecha Nacimiento</th>
        <th>Grupo</th>
    </tr>
    @foreach (var alumno in Model.alumnos) { 
        <tr>
            <td>@(alumno.nombre+" "+alumno.apellidoP+" "+alumno.apellidoM)</td>
            <td>@alumno.fechaNac.ToLongDateString()</td>
            <td>@alumno.grupo.nombreGrupo</td>
            <td>
                @Html.ActionLink("Eliminar", "eliminar", "Alumno", new { id = alumno.noMatricula },null)
                @Html.ActionLink("Editar", "editar", "Alumno", new { id = alumno.noMatricula })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.grupoID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
